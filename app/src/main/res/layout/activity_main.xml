<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido principal -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <!-- Header con gradiente -->
    <View
        android:id="@+id/pulpHeaderView"
        android:layout_width="0dp"
        android:layout_height="190dp"
        android:background="@drawable/gradient_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/gradient_background"
            android:title="@string/app_name"
            app:popupTheme="@style/AppTheme"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <!-- Logo en el header -->
    <ImageView
        android:id="@+id/pulpLogoImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="74dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/logo"
        android:background="@drawable/card_background"
        android:padding="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/pulpHeaderView" />

    <!-- Título -->
    <TextView
        android:id="@+id/pulpTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/pulp_title"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pulpLogoImageView" />

    <!-- ScrollView para el formulario -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pulpHeaderView">

        <!-- Tarjeta principal del formulario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Sección 1: Información de la fruta -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/informaci_n_de_la_fruta"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:drawableStart="@drawable/ic_fruit"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"/>

                <!-- Campo nombre de la fruta -->
                <TextView
                    android:id="@+id/fruitNameLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nombre_de_la_fruta"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/fruitNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/edit_text_selector"
                    android:hint="@string/fruit_name_hint"
                    android:inputType="textCapWords"
                    android:padding="16dp"
                    android:textColor="@color/colorSecondary"
                    android:textSize="16sp" />

                <!-- Sección 2: Cantidad y Medidas -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cantidad_y_medidas"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp" />

                <!-- Layout horizontal para cantidad y unidad -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Campo cantidad -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/cantidad"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/quantityEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_selector"
                            android:hint="@string/quantity_hint"
                            android:inputType="numberDecimal"
                            android:padding="16dp"
                            android:textColor="@color/colorSecondary"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <!-- Spinner de unidades -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/unidad"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <Spinner
                            android:id="@+id/unitSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            android:background="@drawable/spinner_background"
                            android:entries="@array/weight_units"
                            android:padding="16dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Campo fracción -->
                <TextView
                    android:id="@+id/fractionLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fraction_label"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- RadioGroup para fracciones -->
                <RadioGroup
                    android:id="@+id/fractionRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/fraction_quarter"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/_1_4"
                        android:textColor="@color/colorSecondary"
                        android:buttonTint="@color/colorPrimary" />

                    <RadioButton
                        android:id="@+id/fraction_half"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/_1_2"
                        android:textColor="@color/colorSecondary"
                        android:buttonTint="@color/colorPrimary" />

                    <RadioButton
                        android:id="@+id/fraction_three_quarters"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/_3_4"
                        android:textColor="@color/colorSecondary"
                        android:buttonTint="@color/colorPrimary" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/fractionRadioGroup2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/fraction_one"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/_1"
                        android:textColor="@color/colorSecondary"
                        android:buttonTint="@color/colorPrimary"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/fraction_one_half"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/kilomedio"
                        android:textColor="@color/colorSecondary"
                        android:buttonTint="@color/colorPrimary" />

                    <RadioButton
                        android:id="@+id/fraction_two"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/_2"
                        android:textColor="@color/colorSecondary"
                        android:buttonTint="@color/colorPrimary" />

                </RadioGroup>

                <!-- Sección 3: Fechas -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/fechas_de_control"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="8dp" />

                <!-- Layout horizontal para fechas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp" >

                    <!-- Fecha de producción -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fecha_de_producci_n"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/productionDateEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_selector"
                            android:hint="@string/production_date_hint"
                            android:inputType="date"
                            android:padding="16dp"
                            android:textColor="@color/colorSecondary"
                            android:textSize="16sp"
                            android:focusable="false"
                            android:clickable="true" />

                    </LinearLayout>

                    <!-- Fecha de vencimiento -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fecha_de_vencimiento"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/expiryDateEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_selector"
                            android:hint="@string/expiry_date_hint"
                            android:inputType="date"
                            android:padding="16dp"
                            android:textColor="@color/colorSecondary"
                            android:textSize="16sp"
                            android:focusable="true"
                            android:clickable="true" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Campo de observaciones -->
                <TextView
                    android:id="@+id/notesLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/observaciones_adicionales"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/notesEditText"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/edit_text_selector"
                    android:hint="@string/notes_hint"
                    android:inputType="textMultiLine"
                    android:padding="16dp"
                    android:textColor="@color/colorSecondary"
                    android:textSize="16sp"
                    android:gravity="top|start"
                    android:maxLines="4" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/savePulpButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector"
                    android:text="@string/save_pulp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp" />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/cancel_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_selector"
                    android:text="@string/Canc"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Menú lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemTextColor="@color/black"
        android:background="@color/warning_yellow"
        app:menu="@menu/menu_navegacion" />

</androidx.drawerlayout.widget.DrawerLayout>